package com.example.controller;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.FakeEntity.Student;
import com.example.FakeEntity.User;

import reactor.core.publisher.Flux;
import reactor.core.publisher.Mono;

@RestController 
public class NonBlockingController {
	
	
	
	List<Student> li = new ArrayList<Student>();






	@GetMapping("/NonBlockingList")
	public Flux<Student> getList() throws InterruptedException
	{
		for(int i=0;i<=20;i++) {
			li.add(new Student(i,"student",i));
			Thread.sleep(1000);
		}
		return Flux.fromIterable(li);
	}

	
	@GetMapping("/NonBlock")
	public Mono<String> get()
	{
		return Mono.just("Hello World");
	}
}
